<%- include('partials/header'); -%>
<%- include('partials/nav'); -%>

<h1>Redaguoti programuotoją</h1>
<div class="edit">
  <form action="/api/programuotojai/<%= programuotojas._id %>?_method=PUT" method="POST">
    <label for="vardas">Vardas:</label>
    <input type="text" id="vardas" name="vardas" value="<%= programuotojas.vardas %>" required>
  
    <label for="tech">Technologijos (atskirti kableliais):</label>
    <input type="text" id="tech" name="tech" value="<%= programuotojas.tech %>" required>
  
    <label for="laisvas">Laisvas:</label>
    <select id="laisvas" name="laisvas">
      <option value="true" <%= programuotojas.laisvas ? 'selected' : '' %>>Taip</option>
      <option value="false" <%= !programuotojas.laisvas ? 'selected' : '' %>>Ne</option>
    </select>
    <label for="longitude">Ilguma (longitude):</label>
    <input type="number" id="longitude" name="longitude" step="0.00001" value="<%= programuotojas.location.coordinates[0] %>" required>
  
    <label for="latitude">Platuma (latitude):</label>
    <input type="number" id="latitude" name="latitude" step="0.00001" value="<%= programuotojas.location.coordinates[1] %>" required>
  
    <button class="save" type="submit">Išsaugoti</button>
  </form>
</div>

<%- include('partials/footer'); -%>